{
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["DOM", "ES2015"],
    "typeRoots": ["./node_modules/@types"],
    "plugins": [
      { "transform": "typescript-transform-paths" },
    ]
  },
  "include": ["src"]
}
