{
  "compilerOptions": {
    "outDir": "build",
    "declaration": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "plugins": [
      {
        "transform": "typescript-transform-extensions",
        "extensions": { ".ts": ".js" }
      }
    ]
  },
  "include": [
    "src"
  ]
}